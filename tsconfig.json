{
  "compilerOptions": {
    "target": "ES2022",                                
    "module": "NodeNext",                                
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true,
    "outDir": "./dist",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "allowImportingTsExtensions": true                                 
  }
}
